<h1>Welcome <%= @user.username %></h1>
<% if @requests.length == 0 %>
I need internet access: <%= link_to  "Request internet access", new_request_path %>
<% else %>
<h2>My Internet Requests</h2>
<table>
<tr><td>Request Date/Time</td><td>Address</td><td>Actions</td></tr>
<% @requests.each do |req| %>
<tr><td><%= req.created_at %></td><td><%= req.address %></td>
<td><%= button_to  "Delete", delete_request_path(req.id), method: :post, data: { confirm: "Are you sure you want to delete this request?" } %></td></tr>
<% end %>
</table>
<% end %>