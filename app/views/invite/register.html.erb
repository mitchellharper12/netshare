<h1><%= @organization.title %> Registration</h1>
<%= form_with url: enroll_path, method: "post", local: true do |f| %>
  <%= f.label "Email:" %>
  <%= f.text_field :email, value: @user.email %><br>
  <%= f.label "Username:" %>
  <%= f.text_field :username, value: @user.username %><br>
  <%= f.label "Password:" %>
  <%= f.password_field :password, value: @user.password %><br>
  <%= f.label "Confirm Password:" %>
  <%= f.password_field :password_confirmation, value: @user.password_confirmation %><br>
  <%= f.submit "Register" %>
  <%= f.hidden_field :organization_id, value: @organization.id %>
<% end %>
